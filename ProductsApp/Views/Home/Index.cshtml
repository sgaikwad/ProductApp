
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html>

<body ng-app="products">
    @*<div ng-view></div>*@

    <form name="productGallery" ng-controller="searchController" id="custom-search-form" class="form-search form-horizontal">
        <div class="container">
            <div class="row pd10">

                <div class="col-lg-3">
                    <div class="input-group custom-search-form">
                        <input type="text" class="form-control" ng-model="searchItem">
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit" ng-click="getProductByName()">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </span>
                    </div><!-- /input-group -->
                </div>
            </div>

            <div class="row" ng-show="loading">
                <loading class="loading"></loading>
            </div>

            <div class="row pd10">
                <div class="alert alert-danger" role="alert" ng-show="hasError">
                    <strong>{{errorMessage}}</strong>
                </div>
            </div>
            <div class="row pd10" ng-if="searchResult.Status">

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Material</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="product in searchResult.Products.productDetails.products">
                            <td><a>{{product.material}}</a></td>
                            <td>{{product.description}}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </form>
</body>

</html>

